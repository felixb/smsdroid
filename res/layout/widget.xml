<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/de.ub0r.android.smsdroid"
	android:layout_height="81dip" android:layout_width="76dip"
	android:background="@drawable/btn_application_selector" android:id="@+id/widget"
	android:focusable="true" android:clickable="true"
	android:layout_marginTop="5dp">
	<ImageView android:layout_width="56dip"
		android:layout_height="56dip" android:src="@drawable/icon"
		android:scaleType="centerInside" android:id="@+id/icon"
		android:layout_centerHorizontal="true" android:paddingTop="5dip" />
	<TextView android:layout_height="20dip" android:layout_width="20dip"
		android:layout_alignRight="@+id/icon" android:layout_alignBottom="@+id/icon"
		android:id="@+id/text1" android:visibility="gone" android:text="0"
		android:textColor="#FF84B02C" android:textStyle="bold"
		android:textSize="14dip" android:background="@drawable/widget_counter_bg"
		android:gravity="center" android:paddingLeft="1dip" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/app_name"
		android:layout_centerHorizontal="true" android:textSize="13dip"
		android:layout_alignParentBottom="true" android:textColor="@android:color/white"
		android:paddingBottom="1dip" android:layout_marginBottom="4dp"
		android:background="@drawable/widget_label_bg" />
</RelativeLayout>
